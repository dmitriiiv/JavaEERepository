<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "//Hibernate/Hibernate Configuration DTD 3.0//EN"
	 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.agency.travel.hibernate.dao.pojos" auto-import="false" catalog="tours_app">
	<class name="UserPojo" table="USERS">
		<id name="id" column="ID" type="integer">
			<generator class="identity" />
		</id>
	
		<property name="login" column="LOGIN" type="string" />
		<property name="pass" column="PASS" type="string" />
		
		<set name="roles" table="USER_ROLE" lazy="false">
			<key column="USER_ID" />
			<many-to-many column="ROLE_ID" class="RolePojo" />
		</set>
	</class>
</hibernate-mapping>